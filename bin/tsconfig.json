{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es5",
    "allowJs": true,
    "outDir": "",
    "watch": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.css",
    "**/*.png",
    "**/*.jpg",
    "**/*.svg",
    "**/*.html",
    "**/*.json",
    "**/*.md"
  ]
}
